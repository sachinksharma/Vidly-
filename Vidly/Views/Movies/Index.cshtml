@using Vidly.Models
@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th>
           Movie Name
        </th>
        <th>Genre</th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Name,"Details","Movies",new
                {
                    Id=@item.Id

                },null)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
        </tr>
    }
</table>
